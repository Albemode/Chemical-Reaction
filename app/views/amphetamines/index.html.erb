      <th>Cas Number</th>
      <th>Side Effects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amphetamines.each do |amphetamine| %>
      <tr>
        <td><%= amphetamine.name %></td>
        <td><%= amphetamine.drug_name %></td>
        <td><%= amphetamine.title %></td>
        <td><%= amphetamine.size_mb %></td>
        <td><%= amphetamine.records %></td>
        <td><%= amphetamine.file %></td>
        <td><%= amphetamine.formula %></td>
        <td><%= amphetamine.chemistry%></td>
        <td><%= amphetamine.legal_status%></td>
        <td><%= amphetamine.cas_number %></td>
        <td><%= amphetamine.side_effects %></td>
        <td><%= link_to 'Show', amphetamine %></td>
        <td><%= link_to 'Edit', edit_amphetamine_path(amphetamine) %></td>
        <td><%= link_to 'Destroy', amphetamine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

