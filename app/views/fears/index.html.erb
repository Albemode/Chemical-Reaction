<body class="fear">
<p id="notice"><%= notice %></p>

<h1>Fears</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fears.each do |fear| %>
      <tr>
        <td><%= link_to 'Show', fear %></td>
        <td><%= link_to 'Edit', edit_fear_path(fear) %></td>
        <td><%= link_to 'Destroy', fear, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fear', new_fear_path %>
</body>
